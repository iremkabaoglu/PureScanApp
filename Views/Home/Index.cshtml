@{
    ViewData["Title"] = "Ana Sayfa";
    ViewData["BodyClass"] = "home-bg";
    Layout = "_Layout";
}
<!-- Arka plan görseli uygulanmış ana bölüm -->
<section style="
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 100px 80px;
    background: url('/images/background.png') no-repeat center center fixed;
    background-size: cover;
    flex-wrap: wrap;
    gap: 40px;
    color: white;
">

    <!-- Sol: Başlık ve açıklama -->
    <div style="flex: 1; min-width: 300px;">
        <h1 style="font-size: 48px; font-weight: 700; margin-bottom: 20px;">
            Cilt Ürünlerini Akıllıca Analiz Et
        </h1>
        <p style="font-size: 20px; margin-bottom: 30px;">
            PureScan ile kozmetik ürün içeriklerini yükle, riskli bileşenleri öğren.
            Bilimsel ve sade içerik analizi seni bekliyor.
        </p>
        <a href="/Home/UrunInceleme" style="
            background-color: #9c4dcc;
            padding: 16px 30px;
            border-radius: 12px;
            font-weight: bold;
            color: white;
            text-decoration: none;
            box-shadow: 0 8px 20px rgba(156, 77, 204, 0.3);
            transition: all 0.3s ease;
        " onmouseover="this.style.backgroundColor='#7a39ad'" onmouseout="this.style.backgroundColor='#9c4dcc'">
            Analize Başla
        </a>
    </div>


</section>
