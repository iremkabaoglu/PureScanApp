<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PureScanApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PureScanApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="@ViewData["BodyClass"]">

    <!-- NAVBAR -->
    <header class="navbar-custom">
        <!-- Sol: Logo -->
        <div class="navbar-section">
            <img src="~/image/logoo.png" alt="PureScan Logo" class="logo" />
        </div>

        <!-- Orta: Menü -->
        <nav class="navbar-section">
            <a href="/">Ana Sayfa</a>
            <a href="/Home/UrunInceleme">Ürün İnceleme</a>
            <a href="/Home/Makaleler">Makaleler</a>
            <a href="/Home/Hakkimizda">Hakkımızda</a>
        </nav>

        <!-- Sağ: Arama + Butonlar -->
        <div class="navbar-section navbar-right">
            <div class="navbar-search">
                <input type="text" placeholder="Ara" />
                <i class="fas fa-search"></i>
            </div>

            @{
                var username = Context.Session.GetString("username");
            }
            @if (!string.IsNullOrEmpty(username))
            {
                <span>Merhaba, @username</span>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Çıkış Yap</button>
                </form>
            }
            else
            {
                <a class="btn btn-purple-outline btn-sm" href="/Account/Login">Giriş Yap</a>
                <a class="btn btn-purple-outline btn-sm" href="/Account/Register">Kayıt Ol</a>
            }
        </div>
    </header>

    <!-- ANA İÇERİK -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer footer-mini">
        <div class="footer-mini-content">
            <div><strong>İrem Kabaoğlu</strong> – <a href="https://github.com/iremkabaoglu" target="_blank">GitHub</a> | <a href="https://www.linkedin.com/in/irem-kabaoğlu-791614228/" target="_blank">LinkedIn</a></div>
            <div><strong>Rabia Çete</strong> – <a href="https://github.com/rabiacete" target="_blank">GitHub</a> | <a href="https://www.linkedin.com/in/rabia-cete/" target="_blank">LinkedIn</a></div>
            <div><strong>İletişim:</strong> <a href="mailto:purescan@example.com">purescan@example.com</a> | <a href="https://www.purescan.com" target="_blank">purescan.com</a></div>
        </div>

        <div class="footer-mini-bottom">
            &copy; 2025 PureScan – Sakarya Üniversitesi
        </div>
    </footer>
</body>
</html>
